# Server Configuration
PORT=3001
SESSION_SECRET=your-super-secret-session-key-change-this

# Email Configuration (for booking notifications)
# Get these from your Gmail account settings
# You may need to use an "App Password" instead of your regular password
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Google Sheets Configuration (optional)
# To use Google Sheets, you need to:
# 1. Create a Google Cloud Project
# 2. Enable Google Sheets API
# 3. Create a service account and download credentials JSON
# 4. Share your Google Sheet with the service account email
# 5. Paste the entire JSON credentials here (as a single line or use a file)
GOOGLE_SHEETS_CREDENTIALS={"type":"service_account","project_id":"...","private_key_id":"...","private_key":"...","client_email":"...","client_id":"...","auth_uri":"...","token_uri":"...","auth_provider_x509_cert_url":"...","client_x509_cert_url":"..."}
GOOGLE_SHEET_ID=your-google-sheet-id

